<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiApp.Views.InicioPage"
             xmlns:Models="clr-namespace:MiApp.Models"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             Shell.NavBarIsVisible="False"
             Title="InicioPage">


    <ContentPage.Resources>
        <x:Array x:Key="DataCarrusel" Type="{x:Type Models:CarouselItem}">
            <Models:CarouselItem Titulo="Web APIs RESTful con ASP.NET" Descripcion="Los Web APIs son fundamentales en el desarrollo web moderno. Ya que nos permiten centralizar y proteger la lógica de nuestras soluciones." />
            <Models:CarouselItem Titulo=".NET Multi-platform App UI" Descripcion=".NET MAUI, es el potente framework de Microsoft para crear aplicaciones multiplataforma, es decir, aplicaciones para Android, iOS, Windows y MacOS, creando el código una sola vez, y pudiendo desplegarlo en múltiples plataformas." />
            <Models:CarouselItem Titulo="Y mucho mas ..." Descripcion="Mis especialidades incluyen Desarrollo Web, ASP.NET Core y MVC, Entity Framework Core, SQL Server, Javascript, Angular, WPF, Desarrollo Móvil Android y Xamarin. Soy un programador apasionado al que le encanta resolver problemas y automatizar tareas." />
        </x:Array>
    </ContentPage.Resources>


    <ScrollView>
        <Grid RowDefinitions="auto,*,*" BackgroundColor="White">

            <StackLayout Grid.Row="0">
                <StackLayout.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="{StaticResource Primary}" Offset="0.0"/>
                        <GradientStop Color="{StaticResource Primary}" Offset="1.0"/>
                    </LinearGradientBrush>
                </StackLayout.Background>
                <Grid  ColumnDefinitions="auto, * , auto" Padding="10,10">
                    <Image Grid.Column="0" Source="logopnp" HeightRequest="50"/>
                    <StackLayout Grid.Column="1">
                        <Label Text="Policía Nacional del Perú" FontSize="20" HorizontalOptions="Center" TextTransform="Uppercase" HorizontalTextAlignment="Center"
                           
                    TextColor="White"
                    FontFamily="RobotoBold"
                    VerticalOptions="Center"/>
                    </StackLayout>
                    <Image Grid.Column="2" Source="logouniins" HeightRequest="50"/>
                </Grid>

                <StackLayout Spacing="5">
                    <BoxView HeightRequest="2" BackgroundColor="#ba9e66"/>
                    <StackLayout>
                        <Label Text="XXX Curso de especialización" FontSize="12" HorizontalOptions="Center" TextTransform="Uppercase"
                      TextColor="White"
                      FontFamily="RobotoRegular"
                      VerticalOptions="Center"/>
                        <Label Text="Programacion y desarrollo de software" FontSize="12" HorizontalOptions="Center" TextTransform="Uppercase"
                      TextColor="White"
                      FontFamily="RobotoRegular"
                      VerticalOptions="Center"/>
                    </StackLayout>
                    <BoxView HeightRequest="4" BackgroundColor="#ba9e66"/>
                </StackLayout>

            </StackLayout>

            <StackLayout Grid.Row="1"   Padding="20">
                <!--<Image Source="robot.png" HeightRequest="200" Margin="0,20,0,0"/>-->
                <!--<Label Text="PNP" FontSize="20" 
                   HorizontalOptions="Center" 
                   TextColor="Black"
                   FontFamily="RobotoBold"
                   VerticalOptions="Start"/>-->

                <skia:SKLottieView Source="mimaui.json" VerticalOptions="Center"
                           RepeatCount="-1"                           
                           HeightRequest="250"/>

            </StackLayout>

            <!--<StackLayout>
            <Label Text="Bienvenidos al curso de "/>
        </StackLayout>-->

            <StackLayout Grid.Row="2" Spacing="30">

                <StackLayout VerticalOptions="Center" Spacing="15">
                    <CarouselView ItemsSource="{StaticResource DataCarrusel}" IndicatorView="indicatorView" HeightRequest="150">
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout Spacing="15" WidthRequest="300" VerticalOptions="Center" >
                                    <Label  Text="{Binding Titulo}" FontSize="20" HorizontalOptions="Center"  HorizontalTextAlignment="Center"
                                   TextColor="Black"
                                   FontFamily="RobotoBold"/>

                                    <Label Text="{Binding Descripcion}" FontSize="15" 
                                   FontFamily="RobotoRegular"
                                           TextColor="Black"
                                   MaxLines="5"
                                       LineBreakMode="TailTruncation"
                                   HorizontalTextAlignment="Center"
                                   HorizontalOptions="Center"/>
                                </StackLayout>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>

                    <IndicatorView  x:Name="indicatorView"                  
                   IndicatorColor="#d6f5e6"
                            IndicatorSize="12"
                            
                   SelectedIndicatorColor="{StaticResource Primary}"
                   HorizontalOptions="Center" />
                </StackLayout>

                <Button x:Name="btnRepositorio"
                    VerticalOptions="Center" Text="repositorio" WidthRequest="180" CornerRadius="30" TextTransform="Uppercase" TextColor="White" Margin="0,0,0,10"
                     Clicked="btnRepositorio_Clicked"
                        ImageSource="github_brands_white.png"
                        HeightRequest="40"
                     BackgroundColor="{StaticResource Primary}">
                </Button>

            </StackLayout>
        </Grid>
    </ScrollView>

</ContentPage>