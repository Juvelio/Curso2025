<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiApp.Views.CiudadanoPage"
             Title="Ciudadano">

    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding EliminarCommand}" 
                     Text="Eliminar">
            
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Padding="20" Spacing="10">
        <Border>
            <Entry  Text="{Binding Ciudadano.DNI}"/>
        </Border>
        <Border>
            <Entry  Text="{Binding Ciudadano.Paterno}"/>
        </Border>
        <Border>
            <Entry  Text="{Binding Ciudadano.Materno}"/>
        </Border>
        <Border>
            <Entry  Text="{Binding Ciudadano.Nombres}"/>
        </Border>
        <Border>
            <Entry  Text="{Binding Ciudadano.Telefono}"/>
        </Border>

        <Border>
            <Entry  Text="{Binding Ciudadano.Direccion}"/>
        </Border>

        <Picker 
            Title="Selecciona un gÃ©nero"
            ItemsSource="{Binding Generos}"
            SelectedIndex="{Binding SelectedIndex}"
            ItemDisplayBinding="{Binding Descripcion}" />

        <Button Text="Guardar" Command="{Binding GuardarCommand}"/>
        <Button Text="Cancelar" Command="{Binding CancelarCommand}" BackgroundColor="{StaticResource Gray300}"/>


    </VerticalStackLayout>
</ContentPage>